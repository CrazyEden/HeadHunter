<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/button_selector"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/vacancyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:singleLine="true"
            tools:text="Название вакансии"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:drawableStartCompat="@drawable/ic_wallet"
            android:drawablePadding="7dp"
            android:lines="1"
            android:textSize="19sp"
            tools:text="Зарплата" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:drawableStartCompat="@drawable/ic_location"
            android:drawablePadding="7dp"
            android:lines="1"
            android:textSize="19sp"
            tools:text="Местоположение" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/employer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:drawableStartCompat="@drawable/ic_company"
            android:drawablePadding="7dp"
            android:lines="1"
            android:textSize="19sp"
            tools:text="Компания" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/requirement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="4"
            android:textSize="19sp"
            tools:text="Краткие требования" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:foreground="@drawable/button_selector"
            android:text="@string/apply_for_job"
            android:background="@drawable/button_background"
            android:layout_margin="5dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
